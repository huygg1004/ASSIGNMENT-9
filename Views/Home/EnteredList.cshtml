@{

    ViewBag.Title = "Entered Movie List";
}

@model IEnumerable<Assignment3_Movie.Models.Movies>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
                <div class="row m-1 p-1">

                    <div>
                        <h2>Here are the movies currently on the list</h2>

                        <table>
                            <thead>
                                <tr>
                                    <th>Movie ID</th>
                                    <th>Category</th>
                                    <th>Title</th>
                                    <th>Year</th>
                                    <th>Director</th>
                                    <th>Rating</th>
                                    <th>Edited</th>
                                    <th>Lent To</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Assignment3_Movie.Models.Movies x in Model)
                                {
                                <tr>
                                    <td>@x.MovieID</td>
                                    <td>@x.Category</td>
                                    <td>@x.Title</td>
                                    <td>@x.Year</td>
                                    <td>@x.Director</td>
                                    <td>@x.Rating</td>
                                    <td>@x.Edited</td>
                                    <td>@x.LentTo</td>
                                    <td>@x.Notes</td>
                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>